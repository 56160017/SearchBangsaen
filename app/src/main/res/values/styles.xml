<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewDBThaiText">
        <item name="fontPath">fonts/DB_ThaiText/DB_ThaiText_X.ttf</item>
    </style>

    <style name="TextViewCloudLight">
        <item name="fontPath">fonts/cloud/Cloud-Light.otf</item>
    </style>

    <style name="SimpleTextCloud.large" parent="TextViewCloudLight">
        <item name="android:textSize">@dimen/large_font_size_tv</item>
    </style>
    <style name="SimpleTextCloud.large.bold" parent="SimpleTextCloud.large">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SimpleTextCloud.medium" parent="TextViewCloudLight">
        <item name="android:textSize">@dimen/medium_font_size_tv</item>
    </style>
    <style name="SimpleTextCloud.medium.bold" parent="SimpleTextCloud.medium">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SimpleTextCloud">
        <item name="fontPath">fonts/cloud/Cloud-Light.otf</item>
    </style>
</resources>
