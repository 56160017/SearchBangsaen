<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_edit_shop"
        style="@style/bgLinearData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="8">

        <TextView
            android:id="@+id/tv_name_shop_in_edit_page"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="6"
            android:adjustViewBounds="true"
            android:background="@drawable/background_cardview"
            android:padding="10dp"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/img_button_shop_in_edit_picture_page"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:background="#00000000"
            android:src="@drawable/picture_black" />

    </LinearLayout>

</LinearLayout>