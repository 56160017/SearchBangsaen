<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_hotel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_detail"
    tools:context="com.buu.se.searchbangsaen.hotel_categories.activity.DetailHotelActivity">

    <include layout="@layout/toolbar"
        />
    <ScrollView
        android:id="@+id/sv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#f2f2f2"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:contentPadding="3dp">

            <RelativeLayout
                android:id="@+id/rlDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


                <LinearLayout
                    android:id="@+id/ll_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvName"
                        android:maxLines="2"
                        style="@style/SimpleTextCloud.large.bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ครัวน้องเบส"

                        android:textColor="@color/title_bar_hotel"
                        android:textStyle="bold"/>

                    <TextView
                                    style="@style/SimpleTextCloud.mini"
                                    android:id="@+id/tv_emtry_room"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="5dp"
                                    android:textColor="#666666"
                                    android:text="เหลือ"
                                   />
                    </LinearLayout>
                                <LinearLayout
                                    android:paddingTop="5dp"
                                    android:id="@+id/ll_price"
                                    android:layout_gravity="right"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">
                                    <TextView
                                    style="@style/SimpleTextCloud.mini"
                                    android:id="@+id/tv_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#666666"
                                    android:text="ราคาเริ่มต้นที่ "
                                    />
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_height="wrap_content">
                                        <TextView
                                        style="@style/SimpleTextCloud.micro"
                                        android:id="@+id/tv_price_f"
                                        android:layout_gravity="right"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#666666"
                                        android:text="THB 2000"
                                        />
                                        <TextView
                                            style="@style/SimpleTextCloud.mini.bold"
                                            android:id="@+id/tv_price_t"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#666666"
                                            android:text="THB 2000"
                                            />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>


            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#F0ECE9"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F0ECE9"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0093d7"
                    android:orientation="horizontal"
                    android:weightSum="11">
                    <TextView
                        style="@style/SimpleTextCloud.medium.bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:lines="1"
                        android:paddingLeft="10dp"
                        android:text="สิ่งอำนวยความสะดวก"
                        android:textColor="@color/white"
                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"

                        />
                </LinearLayout>
                <GridView
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:id="@+id/gv_benefit"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/ll_detail"
                    android:columnWidth="120dp"
                    android:gravity="center"
                    android:horizontalSpacing="4dp"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="4dp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#F0ECE9"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F0ECE9"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0093d7"
                    android:orientation="horizontal"
                    android:weightSum="11">
                    <TextView
                        style="@style/SimpleTextCloud.medium.bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:lines="1"
                        android:paddingLeft="10dp"
                        android:text="กิจกรรมผ่านคลาย"
                        android:textColor="@color/white"
                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"

                        />
                </LinearLayout>
                <GridView
                    android:id="@+id/gv_relax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_detail"
                    android:columnWidth="120dp"
                    android:gravity="center"
                    android:horizontalSpacing="4dp"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="4dp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#A0AFF2"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0093d7"
                    android:orientation="horizontal"
                    android:weightSum="13">

                    <TextView
                        android:id="@+id/tvImg"
                        android:layout_width="0dp"
                        style="@style/SimpleTextCloud.medium.bold"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:paddingLeft="10dp"
                        android:text="รูปภาพ"
                        android:textColor="@color/white"/>

                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_image"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvImgs"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:background="#f2f2f2">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#F0ECE9"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F0ECE9"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0093d7"
                    android:orientation="horizontal"
                    android:weightSum="11">
                    <TextView
                        style="@style/SimpleTextCloud.medium.bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:lines="1"
                        android:paddingLeft="10dp"
                        android:text="ตำแหน่วที่อยู่"
                        android:textColor="@color/white"
                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_pin_location"
                        />
                </LinearLayout>

                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/tv_location"
                    style="@style/SimpleTextCloud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="ถนนมิตรสัมพันธ์ ชลบุรี"
                    android:textColor="#656565"

                    android:textStyle="bold"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#F0ECE9"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F0ECE9"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_phone"/>

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/SimpleTextCloud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="5"
                    android:lines="1"
                    android:text="089-2196241"
                    android:textColor="#656565"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            style="@style/SimpleTextCloud.mini.bold"
            android:id="@+id/btn_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_margin="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_border_submit"
            android:text="ค้นหาตำแหน่ง"/>

    </LinearLayout>

    </ScrollView>
</RelativeLayout>
