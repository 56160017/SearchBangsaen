<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_restaurant_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.buu.se.searchbangsaen.searchcategories.activity.RestaurantSearchActivity">

  <include layout="@layout/toolbar"
         />

    <android.support.v7.widget.RecyclerView
        style="@style/TextViewDBThaiText"
        android:id="@+id/recycler_res"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvTitle"
        android:background="@color/background_detail"
        android:overScrollMode="never"
        android:scrollbars="vertical"/>
    <FrameLayout
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

   <!-- <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"/>-->
</RelativeLayout>
