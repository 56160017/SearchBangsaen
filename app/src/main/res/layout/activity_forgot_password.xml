<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/grdnt"
    tools:context="com.buu.se.searchbangsaen.auth.fragment.ForgotPasswordFragment">


    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_landing"
        android:alpha="0.3"
        />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:alpha="1"
        android:background="#009a9a"
        app:popupTheme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:id="@+id/rl_appbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#009a9a">

            <TextView
                android:id="@+id/txt_level1"
                style="@style/SimpleTextCloud.medium.bold"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="รีเซ็ตรหัสผ่าน"
                />

            <ImageView
                android:id="@+id/imv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:src="@drawable/btn_back_arrow_white"/>
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/txt_add_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="กรอกอีเมล"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar"
        android:textColor="@color/accent_White"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_forgot"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_add_email"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_emai_black"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:hint="กรอกอีเมล"
                android:inputType="textEmailAddress"
                android:letterSpacing="0.1"
                android:textColor="#000000"
                android:textSize="16dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="240dp"
        android:layout_height="50dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        android:layout_below="@id/card_view_forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        >

    <Button
        android:id="@+id/btn_create"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="#009a9a"
        android:text="ยืนยัน"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>