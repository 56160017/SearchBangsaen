<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:clickable="true"
                                    android:orientation="vertical"
                                    android:padding="10dp"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="3dp"
                                    app:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:id="@+id/tv_name"
            style="@style/SimpleTextCloud.large.bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="โรงแรม"
            android:textColor="#848181"
            />

        <LinearLayout
            android:id="@+id/llDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:orientation="horizontal"
          android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
        >
        <ImageView
            android:id="@+id/iv_hotel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:adjustViewBounds="true"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:weightSum="11"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical"
                android:weightSum="5">


            </LinearLayout>

            <TextView
                android:id="@+id/tv_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:textSize="12sp"
                android:layout_weight="2"
                android:layout_gravity="left"
                android:text="เหลือ 2 ห้งองสุดท้าย"/>

            <TextView
                android:id="@+id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
               />

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="2"
                android:gravity=""
                android:layout_gravity="bottom"
                android:text="ติดต่อ 082-1112321"/>
        </LinearLayout>

        <LinearLayout
         android:paddingTop="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_price_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="ราคาเริ่มต้นที่"
                android:layout_gravity="bottom"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_price_title_f"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:gravity="right"
                style="@style/SimpleTextCloud.micro.bold"
                android:text="THB 2,500"
                />

            <TextView
                style="@style/SimpleTextCloud.micro.bold"
                android:id="@+id/tv_price_title_t"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="THB 1,500"

                />


            <TextView
                android:id="@+id/tvDistance"
                android:layout_gravity="right"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="2 กม."/>

        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>